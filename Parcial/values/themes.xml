<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Parcial" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">

        <item name="colorPrimary">@color/verde_principal</item>
        <item name="colorPrimaryVariant">@color/verde_oscuro</item>
        <item name="colorOnPrimary">@color/blanco</item>
        <item name="colorSecondary">@color/amarillo_secundario</item>
        <item name="colorSecondaryVariant">@color/amarillo_oscuro</item>
        <item name="colorOnSecondary">@color/negro</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Theme.Parcial.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:windowBackground">@color/blanco</item>
        <item name="android:statusBarColor">@color/blanco</item>
    </style>
</resources>
